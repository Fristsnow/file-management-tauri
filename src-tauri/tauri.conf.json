{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "vue-management",
  "version": "0.1.0",
  "identifier": "com.firstsnow.vue-file-management",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:17079",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "vue-management",
        "width": 1200,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' ws: wss: http: https:; worker-src 'self' blob:;",
      "dangerousDisableAssetCspModification": true
    },
    "withGlobalTauri": false
  },
  "plugins": {
    "dialog": null,
    "fs": {
       "requireLiteralLeadingDot": false
     },
    "http": {
      "all": true,
      "request": true,
      "scope": ["http://**", "https://**"]
    }
   },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
